@model List<Form>

@using (Html.BeginForm("Index", "Form", FormMethod.Post))
{
    <table class="table table-bordered">
        <thead>
            <tr class="table-active">
                 <th>Registracijos požymiai</th>
                 <th>Reikšmė</th>
            </tr>
        </thead>
        
         <tbody>
            @for (var i = 0; i < @Model.Count; i++)
                {       
                     @for (var a = 0; a < @Model[i].Questions.Count; a++)
                         {
                            <tr>
                                <td>@Model[i].Questions[a].Title</td>
                                <td>
                                    @Html.HiddenFor(f => @Model[i].Questions[a].Id)
                                    @Html.DropDownListFor(f => @Model[i].Questions[a].AnswerId,
                                            new SelectList(@Model[i].Questions[a].PossibleAnswers,"Id", "Value")) 
                                </td>
                            </tr>
                          }  
                 }
         </tbody>
    </table>

    <input type="button" value="Koreguoti požymius"  id="btnEdit" class="btn btn-primary"/>
    <input type="submit" name="answer" value="Saugoti pataisymus" id="btnSave" class="btn btn-success" />
    <input type="reset" name="answer" value="Atšaukti pataisymus" id="btnCancel"  class="btn btn-danger"/>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/form.js"></script>